<Page x:Class="Bank.UI.Pages.SideNavPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bank.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="220"
      Title="SideNavPage">

    <Grid>
        <StackPanel Orientation="Vertical" Background="LightGray">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding Path = FirstName}" Margin="5" x:Name="lblCustomerFirstName" />
                    <Label Content="{Binding Path = LastName}" Margin="5" x:Name="lblCustomerLastName" />
                    <Label Content="{Binding Path = TotalAmount}" Margin="0,5,5,5" x:Name="lblAccountTotalAmount" />
                </StackPanel>
                
            </DockPanel>
            <DockPanel>
                
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
